	<% if flash[:error] %>
		<div class="error"><p><%= flash[:error] %></p></div>
	<% end %>
<div class="form">
	<h2>Welcome back</h2>
	<%=form_for(:session, url: sessions_path) do |f| %>
		<!-- <%= f.label :email %> -->
		<%= f.text_field :email, :placeholder => "Email address", class: 'general--input' %>

		<!-- <%= f.label :password %> -->
		<%= f.password_field :password, :placeholder => "Password", class: 'general--input' %>

		<%= f.submit 'Sign in', class: 'submit--button'%>
	<% end %>
	<p>New user? <%=link_to 'Sign up now', signup_path%></p>
</div>