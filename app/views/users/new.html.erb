<div class="unit span-gird">
	<%= form_for (@user) do |u| %>
		<%= u.label :name %>
		<%= u.text_field :name %><br>

		<%= u.label :email %>
		<%= u.text_field :email %><br>

		<%= u.label :password %>
		<%= u.text_field :password %><br>

		<%= u.label :password_confirmation, "Confirmation" %>
		<%= u.text_field :password_confirmation %><br>

		<%= u.submit "Sign me up" %>
	<% end %>
</div>