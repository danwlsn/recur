<% flash.each do |key, value| %>
	<div class="flash <%= key %>"><%= value %></div>
<% end %>
<h2 class="unit span-grid">Weight</h2>
<div class="unit one-of-two card weight--card">
	<h2>Weight</h2>
	<%= render 'shared/show_weight' %>
</div>
<div class="unit one-of-two card edit--card">
	<h2>Update</h2>
	<div class="grid inner">
		<div class="unit one-of-two">
			<%= form_for @current_weight, :remote => true do |f| %>
			<h3>Current Weight</h3>
			<%= f.text_field :weight, class: "general--input" %>
			<%= f.submit "Update Current Weight", class: "submit--button" %>
			<% end %>
		</div>
		<div class="unit one-of-two">
			<%= form_for@goal_weight, :remote => true do |f| %>
			<h3>Goal Weight</h3>
			<%= f.text_field :weight, class: "general--input" %>
			<%= f.submit "Update Goal Weight", class: "submit--button" %>
			<% end %>
		</div>
	</div>
</div>